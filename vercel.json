{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb",
                "includeFiles": [
                    "node_modules/@sparticuz/chromium/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js",
            "methods": [
                "GET",
                "POST",
                "OPTIONS"
            ]
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "CHROMIUM_EXECUTABLE_PATH": "/var/task/node_modules/@sparticuz/chromium/bin/chromium"
    }
}